/* components/courseinfo-module/index.wxss */


.courseInfo-module{
  display: table;
  margin: 0 auto;
  width: 92%; 
  padding-top: 0.6rem;
  /* padding-bottom: 0.6rem; */
}

.courseInfo-module .courseInfo-title{
  margin-bottom: 0.6rem;
  display: inline-block;
  line-height: 42rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #3c4a55;
  
}


.courseInfo-txt {
  color: #70788C;
  display: inline-block;
  font-size: 28rpx;
  line-height: 38rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e6eae5;
  word-break: break-all;

  width: 100%;
}

.divide {
  width: 100%;
  height: 24rpx;
  background-color: #f2f4f7;
}